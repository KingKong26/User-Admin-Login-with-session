<div class="container mb-3 ">
    
    <div class="row mt-3 mb-3 ml-auto">
      <div class="col-3 ">
        <a href="/admin/admin-add-user" class="btn btn-success ml-auto">Add new user</a>
      </div>
    </div>
    <table class="table" id="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
      {{!-- <th scope="col">Password</th> --}}
      <th scope="col">Update</th>
    </tr>
  </thead>
  <tbody>
      {{#each users}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.user_name}}</td>
      <td>{{this.email}}</td>
      {{!-- <td>{{this.Password}}</td> --}}
      <td class="ml-3" >
          <a href="/admin/admin-edit/{{this._id}}"  class="btn btn-warning">Edit</a>
          <a href="/admin/delete-user/{{this._id}}" class="btn btn-danger" onclick="return confirm('Delete this user?')">Delete</a>
          
      </td>
    </tr>
     {{/each}}
  
  </tbody>
</table>

