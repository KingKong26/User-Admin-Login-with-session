<div id="header">
<div class="container-fluid">
    <div class="row justify-content-center" >
        <div class="col-xs-6 col-sm-12 col-md-12 col-lg-6 hi" style="padding: 0% 5%">
            <form action="/signup" method="post" role="form" enctype="application/x-www-form-urlencoded" id="signup">
                <legend style="text-align: center;">Signup</legend>
                <div class="form-group hi">
                {{#if error}}
                    <b style="color: red; font-size:small; font-family:'Courier New', Courier, monospace">User already exist.</b>
                {{/if}}
                </div>
                <div class="form-group hi">
                    <label for="first_name">Username</label>
                    <input type="text" class="form-control" name="user_name" id="first_name" placeholder="Username">
                </div>

                <div class="form-group hi">
                    <label for="email">Email Address</label>
                    <input type="text" class="form-control" name="email" id="email" placeholder="Email Address">
                </div>

                <div class="form-group hi">
                    <label for="pw">Password</label>
                    <input type="password" class="form-control" name="Password" id="pw">
                </div>
                <div class="hi" style="text-align: center;">
                <button type="submit" class="btn btn-primary btn-block col-12" >Submit</button>
                </div>
                <div class="hi" style="text-align: center;">
                <button type="reset"  class="btn btn-primary btn-block col-12">Reset</button>
                <div class="mt-3"><a href="/" >Already have an account </a></div>
                
                </div>
                
            </form>
        </div>
    </div>
</div>
</div>