<div id="header">
<div class="container-fluid">
    <div class="row justify-content-center" >
        <div class="col-xs-6 col-sm-12 col-md-12 col-lg-6 hi" style="padding: 0% 5%">
            <form action="/admin/edit/{{user._id}}" method="post" role="form" enctype="application/x-www-form-urlencoded" id="adminEdit">
                <legend style="text-align: center;">Edit User Info</legend>

                <div class="form-group hi">
                    <label for="first_name">Change Username</label>
                    <input type="text" class="form-control" name="user_name" id="first_name" placeholder="Username" value="{{user.user_name}}">
                </div>

                <div class="form-group hi">
                    <label for="email">Change Email Address</label>
                    <input type="text" class="form-control" name="email" id="email" placeholder="Email Address" value="{{user.email}}">
                </div>

                <div class="form-group hi">
                    <label for="pw">New Password</label>
                    <input type="password" class="form-control" name="Password" id="pw">
                </div>

                {{!-- <div class="form-group hi">
                    <label for="pw_confirm">Confirm New Password</label>
                    <input type="password" class="form-control" name="pw_confirm" id="pw_confirm">
                </div> --}}
                <div class="hi" style="text-align: center;">
                <button type="submit" class="btn btn-primary btn-block col-12" onclick="return confirm('Confirm to edit this user?')">Submit</button>
                </div>
                <div class="hi" style="text-align: center;">
                <button type="reset"  class="btn btn-primary btn-block col-12">Reset</button>
                </div>
            </form>
        </div>
    </div>
</div>
</div>